<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Spatie\Ray\Settings\Settings" alias="spatie.ray.settings"/>
        <service id="spatie.ray.settings" class="Spatie\Ray\Settings\Settings">
            <argument type="collection" id="ray.settings"/>
        </service>
        <service id="spatie_ray" class="Spatie\RayBundle\Ray">
            <argument type="service" id="spatie.ray.settings" />
        </service>
    </services>
</container>
